<body>
    <h1>Meldamm</h1>
    <div class="score">Skor: 0</div>
    <div class="bottom-line"></div>
    <button id="pauseButton" onclick="toggleGame()">Duraklat</button>
    <script>
        let score = 0;
        let gameStarted = false;
        let paused = false;
        const scoreDisplay = document.querySelector('.score');
        const bottomLine = document.querySelector('.bottom-line');
        const pauseButton = document.getElementById('pauseButton');

        function updateScore(amount) {
            score += amount;
            scoreDisplay.textContent = `Skor: ${score}`;
        }

        function createBalloon() {
            if (!gameStarted || paused) return;

            const balloon = document.createElement('div');
            const size = Math.random() * 50 + 50;
            const x = Math.random() * (window.innerWidth - size);
            const startY = -size;
            const endY = window.innerHeight + size;
            const speed = Math.random() * 5 + 1;

            balloon.classList.add('balloon');
            balloon.innerHTML = `<img src="https://emojicdn.elk.sh/ðŸŽˆ" alt="Balloon">`;
            balloon.style.width = `${size}px`;
            balloon.style.height = `${size}px`;
            balloon.style.left = `${x}px`;
            balloon.style.top = `${startY}px`;

            balloon.addEventListener('touchstart', () => {
                balloon.classList.add('popped');
                const pop = document.createElement('div');
                pop.classList.add('pop');
                pop.style.left = `${x}px`;
                pop.style.top = `${startY}px`;
                document.body.appendChild(pop);
                requestAnimationFrame(() => {
                    pop.remove();
                    balloon.remove();
                    updateScore(1);
                });
            });

            document.body.appendChild(balloon);

            function moveBalloon() {
                const currentY = parseFloat(balloon.style.top);
                if (currentY < endY) {
                    balloon.style.top = `${currentY + speed}px`;
                    requestAnimationFrame(moveBalloon);
                } else {
                    balloon.remove();
                }
            }

            moveBalloon();
        }

        function startGame() {
            score = 0;
            updateScore(0);
            gameStarted = true;
            setInterval(createBalloon, 1000);
            pauseButton.style.display = 'block';
        }

        function endGame() {
            gameStarted = false;
            pauseButton.style.display = 'none';
        }

        function toggleGame() {
            paused = !paused;
            pauseButton.textContent = paused ? 'Devam Et' : 'Duraklat';
        }

        startGame(); // Otomatik olarak oyunu baÅŸlat
    </script>
</body>
</html>
