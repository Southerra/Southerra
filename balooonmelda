    <title>Melda'nÄ±n Balon Patlatma Oyunu</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Baloo+2&display=swap');
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(#87CEEB, #f0f8ff);
            overflow: hidden;
            position: relative;
        }
        h1 {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #ff69b4;
            font-family: 'Baloo 2', cursive;
            font-size: 3em;
        }
        .score {
            position: fixed;
            top: 10px;
            right: 20px;
            background: rgba(255, 255, 255, 0.8);
            padding: 10px;
            border-radius: 10px;
            font-size: 1.5em;
        }
        .balloon {
            position: absolute;
            cursor: pointer;
            transform-origin: center;
            transition: transform 0.2s ease-out, opacity 0.2s;
        }
        .balloon img {
            width: 100%;
            height: auto;
            transition: transform 0.2s ease-out, opacity 0.2s;
        }
        .popped img {
            transform: scale(0);
            opacity: 0;
        }
        .pop {
            position: absolute;
            width: 60px;
            height: 60px;
            background: url('https://image.freepik.com/free-vector/explosion-comic-style_24908-51205.jpg') center/cover no-repeat;
            pointer-events: none;
            animation: pop 0.3s forwards ease-out;
        }
        @keyframes pop {
            0% {
                transform: scale(0);
            }
            100% {
                transform: scale(2);
                opacity: 0;
            }
        }
        .bottom-line {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background-color: red;
            z-index: 0;
        }
        #pauseButton {
            position: fixed;
            top: 10px;
            left: 10px;
            padding: 10px 20px;
            background-color: #ff69b4;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1em;
